<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity" android:background="#00BFFF">

    <TextView
            android:text="TextView"
            android:background="#FFEFD5"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:text="TextView"
            android:background="#3CB371"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"/>
    <TextView
            android:text="TextView"
            android:background="#FFA07A"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>
    <TextView
            android:text="TextView"
            android:background="#9370DB"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="122dp"
            android:layout_height="35dp"
            android:id="@+id/textUsername" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.029"/>
    <TextView
            android:text="Логин"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textUsername" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.022" app:layout_constraintVertical_bias="0.931"
            android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:background="#FFFFFF"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.433"/>
    <TextView
            android:text="  Время прихода на работу"
            android:layout_width="182dp"
            android:background="#FFA500"
            android:layout_height="35dp"
            android:id="@+id/textView8" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textUsername" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView9"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.576" android:textStyle="bold"/>
    <TextView
            android:text="  Время ухода с работы"
            android:layout_width="190dp"
            android:background="#FFA500"
            android:layout_height="35dp"
            android:id="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="123dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <Button
            android:text="Назад"
            android:onClick="exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_exit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.17"/>
</androidx.constraintlayout.widget.ConstraintLayout>